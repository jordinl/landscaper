{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "concurrently -k -r -s first yarn:start:*",
    "start:cncf-landscape": "MONOREPO=1 yarn workspace cncf-landscape start",
    "build": "concurrently -r -s all yarn:build:*",
    "build:changemyname-base": "yarn workspace changemyname-base build",
    "build:cncf-landscape": "MONOREPO=1 yarn workspace cncf-landscape build",
    "setup": "concurrently -r -s all yarn:setup:*",
    "setup:cncf-landscape": "yarn workspace cncf-landscape setup"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^2.0.0",
    "concurrently": "^7.2.2",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "vite": "^3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
